  "pattern_rules": [
    {
      "regex": "^(\\d{4})-(\\d+)-(\\d+)\\.(doc|pdf|docx)$",
      "template": "FAM Chapter {chapter}-{section}-{subsection}",
      "description_key": "{chapter}-{section}",
