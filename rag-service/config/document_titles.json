    },
    {
      "regex": "^(\\d{4})\\.(doc|pdf|docx)$",
      "template": "FAM Chapter {chapter}",
      "description_key": "{chapter}",
      "comment": "Matches: 1015.doc → FAM Chapter 1015: Financial Planning and Management"
    },
    {
      "regex": "^fam-chapter-(\\d{4})-(\\d+)-(.+)\\.(docx\\.)?pdf$",
      "template": "FAM Chapter {chapter}-{section}: {title}",
      "transform": "title_case",
      "comment": "Matches: fam-chapter-1016-7-travel-cards.pdf"
    }
  ],
  "fallback": {
    "remove_extensions": true,
